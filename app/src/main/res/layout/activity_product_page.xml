<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProductPage">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:id="@+id/goback"
                android:src="@drawable/back_button"
                android:layout_gravity="start"
                android:layout_marginStart="20dp"
                android:padding="2dp"/>



            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:id="@+id/uplaod_images"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="10dp"
                        android:scaleType="centerCrop"
                        android:id="@+id/image1_"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/upload_image"/>

                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:id="@+id/image2_"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/upload_image"/>

                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:id="@+id/image3_"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/upload_image"/>
                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food NaMe Comes Here"
                android:fontFamily="sans-serif"
                android:id="@+id/ddishName"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:textSize="23sp"
                android:textColor="@color/textcolor"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="50dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:src="@drawable/star"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/textcoloenormal"
                    android:layout_gravity="center"/>
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/marker"
                    android:layout_gravity="center"
                    android:layout_marginStart="40dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 min"
                    android:id="@+id/pptime"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/textcoloenormal"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:background="@drawable/buttonbgv2"
                    android:orientation="horizontal"
                    android:layout_marginStart="30dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/minus_sign"
                        android:id="@+id/minus"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="8dp"
                        android:textColor="@color/textcolor"
                        android:textSize="30dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:id="@+id/total"
                        android:background="@drawable/cricler_with_white_bg"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:textColor="@color/textcolor"
                        android:textSize="20dp" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/add"
                        android:tint="@color/textcolor"
                        android:id="@+id/plus"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"/>

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="300 Rs"
                android:fontFamily="sans-serif"
                android:layout_marginStart="20dp"
                android:textSize="26sp"
                android:id="@+id/pprice"
                android:textColor="@color/textcolor"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textcoloenormal"
                android:text="Description comes here"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/description__"
                android:layout_marginTop="20dp"/>


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add To Card"
                android:id="@+id/addtocart"
                android:background="@drawable/buttonbgv2"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="23dp"
                android:layout_gravity="end"
                android:textColor="@color/textcolor"
                android:layout_marginBottom="60dp"
                android:layout_marginTop="30dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>